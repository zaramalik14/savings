

<h1 style="padding-bottom:35px; width:80%">
Today I Saved
</h1>

<form action="/savings/created">
  <div class="label">
  <label for="category">Category</label>
  <input id="category" name="user_category">
  </div>
  
  <div class="label">
  <label for="user">Amount</label>
  <input id="user" name="user_amount">
  </div>

  <div class="label">
  <label for="user2">By</label>
  <input id="user2" name="user_by_doing">
  </div>

  <div class="label">
  <label for="user3">Instead of</label>
  <input id="user3" name="user_instead_of">
  </div>

  <div class="label">
  <label for="user4">Day created</label>
  <input id="user4" name="user_date" value=<%= @the_day%>>
  </div>

  <button>Save</button>
</form>

